<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/i_comment_fragment_item"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/zero"/>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/t1_comment_fragment_item"
            android:text="用户名"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/t2_comment_fragment_item"
            android:text="评论内容"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/i2_comment_fragment_item"

            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
        <TextView
            android:layout_marginLeft="25dp"
            android:id="@+id/t3_comment_fragment_item"
            android:textSize="20sp"
            android:text="赞数"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>